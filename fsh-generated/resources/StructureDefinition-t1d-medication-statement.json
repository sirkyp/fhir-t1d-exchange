{
  "resourceType": "StructureDefinition",
  "id": "t1d-medication-statement",
  "url": "http://t1dexchange.org/fhir/StructureDefinition/t1d-medication-statement",
  "name": "T1DMedicationStatement",
  "title": "T1D Medication Statement",
  "status": "draft",
  "description": "Medication statement profile for documenting current T1D medications",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "MedicationStatement",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/MedicationStatement",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "MedicationStatement.identifier",
        "path": "MedicationStatement.identifier",
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.status",
        "path": "MedicationStatement.status",
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.category",
        "path": "MedicationStatement.category",
        "mustSupport": true,
        "binding": {
          "strength": "preferred",
          "valueSet": "http://t1dexchange.org/fhir/ValueSet/t1d-medication-category-valueset"
        }
      },
      {
        "id": "MedicationStatement.medication[x]",
        "path": "MedicationStatement.medication[x]",
        "slicing": {
          "discriminator": [
            {
              "type": "type",
              "path": "$this"
            }
          ],
          "ordered": false,
          "rules": "open"
        },
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.medication[x]:medicationCodeableConcept",
        "path": "MedicationStatement.medication[x]",
        "sliceName": "medicationCodeableConcept",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "CodeableConcept"
          }
        ],
        "mustSupport": true,
        "binding": {
          "strength": "extensible",
          "valueSet": "http://t1dexchange.org/fhir/ValueSet/t1d-medication-code-valueset"
        }
      },
      {
        "id": "MedicationStatement.subject",
        "path": "MedicationStatement.subject",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-patient"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.context",
        "path": "MedicationStatement.context",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-encounter"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.effective[x]",
        "path": "MedicationStatement.effective[x]",
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.informationSource",
        "path": "MedicationStatement.informationSource",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-provider",
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-patient"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.dosage",
        "path": "MedicationStatement.dosage",
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.dosage.timing",
        "path": "MedicationStatement.dosage.timing",
        "mustSupport": true
      },
      {
        "id": "MedicationStatement.dosage.route",
        "path": "MedicationStatement.dosage.route",
        "mustSupport": true,
        "binding": {
          "strength": "extensible",
          "valueSet": "http://t1dexchange.org/fhir/ValueSet/t1d-medication-route-valueset"
        }
      },
      {
        "id": "MedicationStatement.dosage.doseAndRate",
        "path": "MedicationStatement.dosage.doseAndRate",
        "mustSupport": true
      }
    ]
  }
}
