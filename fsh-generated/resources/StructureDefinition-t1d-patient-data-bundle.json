{
  "resourceType": "StructureDefinition",
  "id": "t1d-patient-data-bundle",
  "url": "http://t1dexchange.org/fhir/StructureDefinition/t1d-patient-data-bundle",
  "name": "T1DPatientDataBundle",
  "title": "T1D Patient Data Bundle",
  "status": "draft",
  "description": "Bundle containing comprehensive T1D data for a single patient, including demographics, encounters, observations, conditions, and medications.",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Bundle",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Bundle",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Bundle.type",
        "path": "Bundle.type",
        "fixedCode": "collection"
      },
      {
        "id": "Bundle.timestamp",
        "path": "Bundle.timestamp",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Bundle.entry",
        "path": "Bundle.entry",
        "slicing": {
          "discriminator": [
            {
              "type": "type",
              "path": "resource"
            }
          ],
          "rules": "open"
        },
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Bundle.entry:patient",
        "path": "Bundle.entry",
        "sliceName": "patient",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Bundle.entry:patient.resource",
        "path": "Bundle.entry.resource",
        "short": "Patient demographics",
        "type": [
          {
            "code": "Patient",
            "profile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-patient"
            ]
          }
        ]
      },
      {
        "id": "Bundle.entry:encounter",
        "path": "Bundle.entry",
        "sliceName": "encounter",
        "min": 0,
        "max": "*",
        "mustSupport": true
      },
      {
        "id": "Bundle.entry:encounter.resource",
        "path": "Bundle.entry.resource",
        "short": "Clinical encounters",
        "type": [
          {
            "code": "Encounter",
            "profile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-encounter"
            ]
          }
        ]
      },
      {
        "id": "Bundle.entry:observation",
        "path": "Bundle.entry",
        "sliceName": "observation",
        "min": 0,
        "max": "*",
        "mustSupport": true
      },
      {
        "id": "Bundle.entry:observation.resource",
        "path": "Bundle.entry.resource",
        "short": "T1D observations and measurements",
        "type": [
          {
            "code": "Observation",
            "profile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-observation"
            ]
          }
        ]
      },
      {
        "id": "Bundle.entry:condition",
        "path": "Bundle.entry",
        "sliceName": "condition",
        "min": 0,
        "max": "*",
        "mustSupport": true
      },
      {
        "id": "Bundle.entry:condition.resource",
        "path": "Bundle.entry.resource",
        "short": "T1D diagnoses and conditions",
        "type": [
          {
            "code": "Condition",
            "profile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-condition"
            ]
          }
        ]
      },
      {
        "id": "Bundle.entry:medication",
        "path": "Bundle.entry",
        "sliceName": "medication",
        "min": 0,
        "max": "*",
        "mustSupport": true
      },
      {
        "id": "Bundle.entry:medication.resource",
        "path": "Bundle.entry.resource",
        "short": "Insulin and diabetes medications",
        "type": [
          {
            "code": "MedicationRequest",
            "profile": [
              "http://t1dexchange.org/fhir/StructureDefinition/t1d-medication-request"
            ]
          }
        ]
      }
    ]
